<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>Client-linux64</id>
    <baseDirectory>linux64</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>

    <formats>
        <format>dir</format>
    </formats>

    <fileSets>
        <fileSet>
            <outputDirectory></outputDirectory>
            <directory>share/openjdk/runtime/linux64</directory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>src/scripts/Client.sh</source>
            <destName>Start.sh</destName>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>${project.parent.basedir}/LICENSE.txt</source>
            <destName>LICENSE.txt</destName>
            <outputDirectory></outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>0644</fileMode>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>modules</outputDirectory>
            <!--<useTransitiveFiltering>true</useTransitiveFiltering>-->
            <excludes>
                <exclude>${project.groupId}:RemoteSupportTool-Server:*:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>